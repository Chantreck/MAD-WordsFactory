<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "AccentButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/button_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <style name="TransparentButton" parent = "Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">@dimen/margin_16</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/ink_dark_grey</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/button_small</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>


<!--    Text Styles -->

    <style name="Text">
        <item name="android:textColor">@color/ink_dark</item>
    </style>
    <style name="Text.Heading1">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/heading1</item>
    </style>
    <style name="Text.Heading2">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/heading2</item>
    </style>
    <style name="Text.Heading3">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/heading3</item>
    </style>
    <style name="Text.Heading4">
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/heading4</item>
    </style>
    <style name="Text.Heading5">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/heading5</item>
    </style>
    <style name="Text.Paragraph_Large">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/paragraph_large</item>
    </style>
    <style name="Text.Paragraph_Medium">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/paragraph_medium</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    <style name="Text.Paragraph_Small">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/paragraph_small</item>
    </style>
    <style name="Text.Button_Large">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/button_large</item>
    </style>
    <style name="Text.Button_Medium">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/button_medium</item>
    </style>
    <style name="Text.Button_Small">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/button_small</item>
    </style>
</resources>